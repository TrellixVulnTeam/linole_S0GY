COLOR_RESET="\[$(tput sgr0)"               # Color Reset

function python_venv {
  if [ "$VIRTUAL_ENV" != "" ]; then
    echo "(`basename \"$VIRTUAL_ENV\"`) "
  else
    echo ""
  fi
}

function git_branch {
  git branch 2>/dev/null | grep '^*' | colrm 1 2
}

function git_dirty {
  [[ -z $(git status --porcelain 2> /dev/null) ]] || echo -e "*"
}

function refresh_ps1 {
  GIT_BRANCH="";
  if git branch &>/dev/null; then\
    GIT_BRANCH="\["$BWhite"\] ("$(git_branch)$(git_dirty)")";\
  fi;
  PYTHON_VENV=$(python_venv)
  PS1="$PYTHON_VENV\[$Green\][$USER_STRING]\[$Blue\] $PATH_STRING$GIT_BRANCH:\[$COLOR_RESET\] "
}

USER_STRING="\u@\h"
PATH_STRING="\w"
PROMPT_COMMAND='refresh_ps1'


